                <!-- Cridar desde python, li diu quin action vol fer al servidor-->
                  <button name="launch_player_wizard" type="object" string="Create Player" class="oe_highlight" />
                <field name = "is_player"/>

              </group>
            </page>
        </notebook>
      </field>
    </record> 


